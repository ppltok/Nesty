{
  "manifest_version": 3,
  "name": "Nesty - Product Scraper",
  "version": "1.0.0",
  "description": "Extract product data from any e-commerce site with a beautiful interface",
  "permissions": [
    "activeTab",
    "scripting",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "http://localhost:5173/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Extract Product Data"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup-styles.css", "page-script.js", "config.js", "supabase-client.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
