{
  "manifest_version": 3,
  "name": "Add to Nesty Button",
  "version": "1.3.0",
  "description": "Add products from any e-commerce site to your Nesty baby registry. Extract products from current page or paste any product URL.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5173/*",
    "https://nestyil.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Add to Nesty",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup-styles.css", "page-script.js", "config.js", "supabase-client.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
