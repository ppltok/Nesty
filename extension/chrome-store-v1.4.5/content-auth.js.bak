/**
 * Inject popup styles
 */
function injectStyles() {
  if (document.getElementById('nesty-styles')) return

  const link = document.createElement('link')
  link.id = 'nesty-styles'
  link.rel = 'stylesheet'
  link.href = chrome.runtime.getURL('popup-styles.css')
  document.head.appendChild(link)
}

/**
 * Get Supabase session by injecting page script
 */
async function getSupabaseSession() {
  return new Promise((resolve) => {
    console.log('ğŸ” Setting up session listener...')

    // Listen for session message
    const messageHandler = (event) => {
      console.log('ğŸ“¨ Received message:', event.data?.type)
      if (event.data && event.data.type === 'NESTY_SUPABASE_SESSION') {
        console.log('âœ… Got session message:', event.data.session ? 'Session exists' : 'No session')
        window.removeEventListener('message', messageHandler)
        resolve(event.data.session)
      }
    }
    window.addEventListener('message', messageHandler)

    // Inject page script
    console.log('ğŸ’‰ Injecting page-script.js...')
    const script = document.createElement('script')
    script.src = chrome.runtime.getURL('page-script.js')
    script.onload = () => {
      console.log('âœ… Page script loaded')
      script.remove()
    }
    script.onerror = () => {
      console.error('âŒ Failed to load page script')
      script.remove()
    }
    ;(document.head || document.documentElement).appendChild(script)

    // Timeout after 3 seconds
    setTimeout(() => {
      console.log('â±ï¸ Session timeout reached')
      window.removeEventListener('message', messageHandler)
      resolve(null)
    }, 3000)
  })
}

/**
 * Fetch user's registry from Supabase
 */
async function fetchUserRegistry(userId) {
  try {
    const response = await fetch(
      `${NESTY_CONFIG.SUPABASE_URL}/rest/v1/registries?owner_id=eq.${userId}&select=*`,
      {
        headers: {
          'apikey': NESTY_CONFIG.SUPABASE_ANON_KEY,
          'Authorization': `Bearer ${supabaseSession.access_token}`,
          'Content-Type': 'application/json'
        }
      }
    )

    if (!response.ok) {
      throw new Error('Failed to fetch registry')
    }

    const data = await response.json()
    return data && data.length > 0 ? data[0] : null
  } catch (error) {
    console.error('Error fetching registry:', error)
    throw error
  }
}

/**
 * Extract product data from the page
 */
function extractProductData() {
  console.log('ğŸ” Extracting product data...')

  // Look for JSON-LD scripts
  const jsonLdScripts = document.querySelectorAll('script[type="application/ld+json"]')
  console.log(`Found ${jsonLdScripts.length} JSON-LD script(s)`)

  for (let script of jsonLdScripts) {
    try {
      const data = JSON.parse(script.textContent)

      // Handle Product type
      if (data['@type'] === 'Product') {
        console.log('âœ… Found Product type')
        return extractFromProduct(data)
      }

      // Handle ProductGroup type (like Shopify variants)
      if (data['@type'] === 'ProductGroup') {
        console.log('âœ… Found ProductGroup type')
        return extractFromProductGroup(data)
      }

      // Handle @graph array
      if (data['@graph']) {
        const product = data['@graph'].find(item =>
          item['@type'] === 'Product' || item['@type'] === 'ProductGroup'
        )
        if (product) {
          console.log('âœ… Found Product in @graph')
          return product['@type'] === 'Product'
            ? extractFromProduct(product)
            : extractFromProductGroup(product)
        }
      }
    } catch (error) {
      console.warn('âš ï¸ Failed to parse JSON-LD:', error)
    }
  }

  console.log('âŒ No product data found')
  return null
}

/**
 * Extract data from Product type
 */
function extractFromProduct(data) {
  const offer = Array.isArray(data.offers) ? data.offers[0] : data.offers

  // Handle images
  const imageUrls = []
  if (data.image) {
    if (Array.isArray(data.image)) {
      imageUrls.push(...data.image)
    } else {
      imageUrls.push(data.image)
    }
  }

  return {
    name: data.name || '',
    category: data.category || '',
    price: offer?.price || offer?.lowPrice || '',
    priceCurrency: offer?.priceCurrency || '',
    brand: data.brand?.name || data.brand || '',
    imageUrls: [...new Set(imageUrls)],
    originalUrl: window.location.href
  }
}

/**
 * Extract data from ProductGroup type
 */
function extractFromProductGroup(data) {
  // Get first variant
  const variants = data.hasVariant || []
  const firstVariant = Array.isArray(variants) ? variants[0] : variants
  const offer = firstVariant?.offers

  // Collect all unique images from variants
  const imageUrls = []
  if (Array.isArray(variants)) {
    variants.forEach(variant => {
      if (variant.image) {
        if (Array.isArray(variant.image)) {
          imageUrls.push(...variant.image)
        } else {
          imageUrls.push(variant.image)
        }
      }
    })
  }

  return {
    name: data.name || '',
    category: data.category || '',
    price: offer?.price || '',
    priceCurrency: offer?.priceCurrency || '',
    brand: data.brand?.name || data.brand || '',
    imageUrls: [...new Set(imageUrls)],
    originalUrl: window.location.href
  }
}

